{
  "name": "local-ssl-proxy",
  "version": "2.0.5",
  "author": "Cameron Hunter <hello@cameronhunter.co.uk>",
  "description": "Simple SSL HTTP proxy using a self-signed certificate. Intended for local development only.",
  "repository": {
    "type": "git",
    "url": "http://github.com/cameronhunter/local-ssl-proxy.git"
  },
  "license": "MIT",
  "engines": {
    "node": "24.x"
  },
  "bin": "build/main.js",
  "preferGlobal": true,
  "files": [
    "build",
    "resources"
  ],
  "scripts": {
    "start": "ts-node ./src/main.ts",
    "prebuild": "pnpm clean",
    "build": "tsc && chmod +x ./build/main.js",
    "clean": "tsc --build --clean",
    "test": "vitest run",
    "prepublish": "pnpm test && pnpm build",
    "renew-certs": "cd resources && mkcert localhost"
  },
  "dependencies": {
    "commander": "14.0.1",
    "http-proxy-3": "1.22.0",
    "pino": "^10.0.0",
    "pino-pretty": "13.1.2",
    "ts-node": "10.9.2"
  },
  "devDependencies": {
    "@types/node": "24.7.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.18.3"
}
